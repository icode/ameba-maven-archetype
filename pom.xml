<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.amebastack.maven</groupId>
    <artifactId>maven-module-archetype</artifactId>
    <version>0.1.7-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>org.amebastack</groupId>
            <artifactId>ameba</artifactId>
            <version>${ameba.version}</version>
        </dependency>

        <dependency>
            <groupId>org.amebastack.module</groupId>
            <artifactId>ameba-session</artifactId>
            <version>${ameba.session.version}</version>
        </dependency>
        <dependency>
            <groupId>org.amebastack.module</groupId>
            <artifactId>ameba-cache-ehcache</artifactId>
        </dependency>

        <dependency>
            <groupId>org.amebastack.container</groupId>
            <artifactId>ameba-container-grizzly</artifactId>
            <version>${ameba.container.version}</version>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-cache-ehcache</artifactId>
                <version>${ameba.ehcache.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-cache-memcached</artifactId>
                <version>${ameba.memcached.version}</version>
            </dependency>

            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-email</artifactId>
                <version>${ameba.email.version}</version>
            </dependency>

            <dependency>
                <groupId>org.amebastack.security</groupId>
                <artifactId>ameba-shiro</artifactId>
                <version>${ameba.shrio.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>oss</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <updatePolicy>never</updatePolicy>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>interval:5</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>oss</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <updatePolicy>never</updatePolicy>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>interval:5</updatePolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <inherited>true</inherited>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.amebastack.module</groupId>
                    <artifactId>ameba-dev</artifactId>
                    <version>${ameba.dev.version}</version>
                </dependency>

                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <version>1.4.187</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>deploy</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <configuration>
                                    <gpgArguments>
                                        <argument>--no-tty</argument>
                                    </gpgArguments>
                                </configuration>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>2.2.1</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/deploy.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.amebastack.maven</groupId>
                        <artifactId>ameba-maven</artifactId>
                        <version>${ameba.maven}</version>
                        <executions>
                            <execution>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>enhance</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <properties>
        <ameba.version>0.1.7-SNAPSHOT</ameba.version>
        <ameba.maven>0.1.7-SNAPSHOT</ameba.maven>
        <ameba.session.version>0.1.7-SNAPSHOT</ameba.session.version>
        <ameba.dev.version>0.1.7-SNAPSHOT</ameba.dev.version>
        <ameba.shrio.version>0.1.7-SNAPSHOT</ameba.shrio.version>
        <ameba.container.version>0.1.7-SNAPSHOT</ameba.container.version>
        <ameba.ehcache.version>0.1.7-SNAPSHOT</ameba.ehcache.version>
        <ameba.memcached.version>0.1.7-SNAPSHOT</ameba.memcached.version>
        <ameba.email.version>0.1.7-SNAPSHOT</ameba.email.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>