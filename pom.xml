<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.amebastack.maven</groupId>
    <artifactId>ameba-maven-archetype</artifactId>
    <version>0.1.13-SNAPSHOT</version>
    <name>Ameba-Application</name>

    <dependencies>
        <dependency>
            <groupId>org.amebastack</groupId>
            <artifactId>ameba</artifactId>
            <version>${ameba.version}</version>
        </dependency>


        <dependency>
            <groupId>org.amebastack.template</groupId>
            <artifactId>ameba-mvc-httl</artifactId>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.amebastack.container</groupId>
                <artifactId>ameba-container-grizzly</artifactId>
                <version>${ameba.container.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-session</artifactId>
                <version>${ameba.session.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-cache-ehcache</artifactId>
                <version>${ameba.ehcache.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-cache-memcached</artifactId>
                <version>${ameba.memcached.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.module</groupId>
                <artifactId>ameba-email</artifactId>
                <version>${ameba.email.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.security</groupId>
                <artifactId>ameba-shiro</artifactId>
                <version>${ameba.shrio.version}</version>
            </dependency>
            <dependency>
                <groupId>org.amebastack.template</groupId>
                <artifactId>ameba-mvc-httl</artifactId>
                <version>${ameba.mvc.httl.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>oss</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <updatePolicy>never</updatePolicy>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>interval:5</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>oss</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <updatePolicy>never</updatePolicy>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>interval:5</updatePolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <filters>
            <filter>${application.properties}</filter>
            <filter>${application.mode.properties}</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <inherited>true</inherited>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-archetype-plugin</artifactId>
                <version>2.3</version>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>app.dev.mode</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.amebastack.module</groupId>
                    <artifactId>ameba-dev</artifactId>
                    <version>${ameba.dev.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.amebastack.container</groupId>
                    <artifactId>ameba-container-grizzly</artifactId>
                </dependency>
            </dependencies>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/conf</directory>
                        <targetPath>${project.build.outputDirectory}/conf</targetPath>
                        <filtering>true</filtering>
                    </resource>
                </resources>
            </build>
            <properties>
                <app.mode>dev</app.mode>
            </properties>
        </profile>
        <profile>
            <id>app.test.mode</id>
            <properties>
                <app.mode>test</app.mode>
            </properties>
        </profile>
        <profile>
            <id>app.prod.mode</id>
            <properties>
                <app.mode>prod</app.mode>
            </properties>
        </profile>

        <!--enhance class-->
        <profile>
            <id>enhance</id>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/conf</directory>
                        <targetPath>${project.build.directory}/ameba/conf</targetPath>
                        <filtering>true</filtering>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.amebastack.maven</groupId>
                        <artifactId>ameba-maven-plugin</artifactId>
                        <version>${ameba.maven.version}</version>
                        <executions>
                            <execution>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>enhance</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!--package standalone start-->
        <profile>
            <id>standalone</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.2.1</version>
                        <configuration>
                            <filters>
                                <filter>${application.properties}</filter>
                                <filter>${application.mode.properties}</filter>
                            </filters>
                            <descriptors>
                                <descriptor>src/main/assembly/standalone.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <dependencies>
                <dependency>
                    <groupId>org.amebastack.container</groupId>
                    <artifactId>ameba-container-grizzly</artifactId>
                </dependency>
            </dependencies>
        </profile>
        <!--package standalone end-->
    </profiles>

    <properties>
        <application.properties>src/main/filters/application.properties</application.properties>
        <application.mode.properties>src/main/filters/application-${app.mode}.properties</application.mode.properties>
        <ameba.version>0.1.13-SNAPSHOT</ameba.version>
        <ameba.dev.version>0.1.13-SNAPSHOT</ameba.dev.version>
        <ameba.maven.version>0.1.13-SNAPSHOT</ameba.maven.version>
        <ameba.container.version>0.1.13-SNAPSHOT</ameba.container.version>
        <ameba.ehcache.version>0.1.13-SNAPSHOT</ameba.ehcache.version>
        <ameba.memcached.version>0.1.13-SNAPSHOT</ameba.memcached.version>
        <ameba.shrio.version>0.1.13-SNAPSHOT</ameba.shrio.version>
        <ameba.session.version>0.1.13-SNAPSHOT</ameba.session.version>
        <ameba.email.version>0.1.13-SNAPSHOT</ameba.email.version>
        <ameba.mvc.httl.version>0.1.13-SNAPSHOT</ameba.mvc.httl.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>